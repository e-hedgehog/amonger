<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Amonger" parent="Theme.MaterialComponents.DayNight.DarkActionBar.Bridge">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/red_primary_dark</item>
        <item name="colorPrimaryVariant">@color/red_primary_variant_dark</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/pink_a200</item>
        <item name="colorSecondaryVariant">@color/pink_a200</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:editTextColor">@color/text_color</item>
        <item name="android:editTextBackground">@drawable/edit_text_shape</item>
        <item name="android:colorBackground">?attr/colorSurface</item>
    </style>
</resources>